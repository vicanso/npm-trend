@import 'nib'
@import './common'

.tooltip
  box-shadow 0 0 0 1px rgba(16, 22, 26, 0.1), 0 2px 4px rgba(16, 22, 26, 0.2), 0 8px 24px rgba(16, 22, 26, 0.2)
  transform scale(1)
  z-index 20
  border-radius 3px
  background-color #fff
  padding 10px 15px
  position absolute
  $arrowWidth = 8px
  color $COLOR_LIGHT_BLACK
  width 360px
  .arrow-up, .arrow-up-shadow
    position absolute
    margin-left -($arrowWidth / 2)
    top -($arrowWidth)
    width 0
    height 0
    border-left $arrowWidth solid transparent
    border-right $arrowWidth solid transparent
    border-bottom $arrowWidth solid #fff
  .arrow-up-shadow
    border-bottom $arrowWidth solid rgba(16, 22, 26, 0.1)
    top -($arrowWidth + 1)

.progressBar
  position fixed
  left 0
  top 0
  height 3px
  background-color $COLOR_GREEN

.scroll-top
  position fixed
  top 15px
  right 15px
  width 40px
  height @width
  background-color alpha($COLOR_DARK_BLUE, 0.7)
  color #fff
  text-align center
  line-height @height
  font-size 16px
  &:hover
    background-color $COLOR_DARK_BLUE
